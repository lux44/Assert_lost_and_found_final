<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cloud"
    tools:context=".FirstActivity">


    <TextView
        android:id="@+id/tv_intro_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/cafe"
        android:text="잃어버린 물건이 있으신가요?"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분실물을 등록하고"
        android:fontFamily="@font/cafe"
        android:textSize="32sp"
        android:layout_marginTop="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_intro_1"
        android:id="@+id/tv_intro_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_intro_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24sp"
        android:text="찾아주기도 해보아요!"
        android:fontFamily="@font/cafe"
        android:textSize="32sp"
        android:id="@+id/tv_intro_3"/>

    <Button
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_green"
        android:fontFamily="@font/hs"
        android:text="회원가입"
        android:textSize="36sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/btn_join"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36sp"
        android:background="@drawable/button_green"
        android:fontFamily="@font/hs"
        android:text="로그인"
        android:textSize="36sp"
        android:textStyle="normal" />
    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/btn_login"
        android:background="@drawable/button_green"
        android:text="둘러보기"
        android:textSize="36sp"
        android:fontFamily="@font/hs"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36sp"
        android:id="@+id/btn_around"/>

</RelativeLayout>