<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".MapProductActivity">

    <fragment
        android:id="@+id/frag_map_product"
        android:name="com.lux.assert_lost_and_found.MapProductFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp" />


    <Button
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/button_mint"
        android:text="뒤로가기"
        android:drawableLeft="@drawable/ic_back"
        android:fontFamily="@font/elice_regular"
        android:textSize="20sp"
        android:drawablePadding="-20dp"
        android:layout_below="@id/frag_map_product"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="등록"
        android:background="@drawable/button_mint"
        android:drawableRight="@drawable/ic_next"
        android:drawablePadding="-20dp"
        android:fontFamily="@font/elice_regular"
        android:layout_below="@id/frag_map_product"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_next"
        android:textSize="20sp"/>

</RelativeLayout>