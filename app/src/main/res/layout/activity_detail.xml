<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tv_detail_explain"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/elice_regular"
        android:text="게시물의 제목(물건의 상세 제목)과 물건을 주우신 시간과 날짜를 입력해주세요."
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_detail"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/tv_detail_explain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_background_mint"
        android:hint="ex) 에어팟, 아이폰 12"
        android:maxEms="30"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_timePick"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_mint"
        android:fontFamily="@font/elice_regular"
        android:text="시간 선택"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_get_time"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_timePick"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_background_mint"
        android:gravity="center"
        android:hint="00:00"
        android:padding="8dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_datePick"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_get_time"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_mint"
        android:fontFamily="@font/elice_regular"
        android:text="날짜 선택"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_get_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_background_mint"
        android:textSize="20sp"
        android:layout_below="@id/btn_datePick"
        android:layout_centerHorizontal="true"
        android:hint="2022-04-22"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/tv_get_date"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_mint"
        android:drawableLeft="@drawable/ic_back"
        android:drawablePadding="-20dp"
        android:fontFamily="@font/elice_regular"
        android:text="뒤로가기"
        android:textSize="20sp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="다음"
        android:background="@drawable/button_mint"
        android:drawableRight="@drawable/ic_next"
        android:drawablePadding="-20dp"
        android:fontFamily="@font/elice_regular"
        android:layout_below="@id/tv_get_date"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_next"
        android:textSize="20sp"/>



</RelativeLayout>